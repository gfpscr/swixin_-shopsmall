.revice_address_row .address_btn {
  padding: 20rpx;
}
.revice_address_row button {
  width: 60%;
}
.revice_address_row .user_info_row {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .user_info_row .user_info {
  flex: 5;
}
.revice_address_row .user_info_row .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content {
  padding: 20rpx 0;
}
.cart_content .cart_title {
  font-size: 40rpx;
  padding: 10rpx 20rpx;
  font-weight: 600;
  line-height: 80rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart_content .cart_item {
  display: flex;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_chk {
  flex: 1;
  justify-content: center;
  align-items: center;
  display: flex;
}
.cart_content .cart_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_img image {
  width: 80%;
}
.cart_content .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
}
.cart_content .cart_info .cart_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.cart_content .cart_info .cary_price_num {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_info .cary_price_num .cart_price {
  font-size: 36rpx;
  color: var(--themeColor);
}
.cart_content .cart_info .cary_price_num .cart_num {
  display: flex;
}
.cart_content .cart_info .cary_price_num .cart_num .cart_edit {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart_content .cart_info .cary_price_num .cart_num .cart_number {
  width: 60rpx;
  height: 55rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 55rpx ;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.footer_tool .all_chk_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total {
  flex: 4;
  padding-right: 15rpx;
  text-align: right;
}
.footer_tool .total text {
  color: var(--themeColor);
  font-weight: 600;
  font-size: 35rpx;
}
.footer_tool .total view {
  font-size: 25rpx;
}
.footer_tool .order {
  flex: 2;
  background-color: var(--themeColor);
  color: white;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
